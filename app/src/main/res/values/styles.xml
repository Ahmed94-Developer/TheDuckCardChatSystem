<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#FFFF</item>
        <item name="android:textColorHint">#FFFF</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint" tools:ignore="DuplicateDefinition">@android:color/white</item>

        <!--SearchView query hint text color-->
    </style>
    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:searchIcon" tools:ignore="NewApi">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:icon">@drawable/ic_search</item>
        <item name="android:iconTint" tools:ignore="NewApi">@color/white</item>
        <item name="android:theme">@style/Theme.AppCompat.Light.NoActionBar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:closeIcon" tools:ignore="NewApi">@drawable/ic_search</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/white</item>

        <item name="android:goIcon" tools:ignore="NewApi">@drawable/ic_search</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#B5B5B5</item>
    </style>
    <style name="settingsButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

    </style>
    <style name="Theme.MyFancyTheme" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
    </style>
    <style name="normalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="smallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#737373</item>
    </style>


    <style name="Divider2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#A5A5A5</item>
    </style>
    <style name="ThemeOverlay.SearchView" parent="">
        <!-- Text color -->
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>


        <!-- Hint text color -->
        <item name="android:textColorHint">@color/white</item>
    </style>


</resources>
